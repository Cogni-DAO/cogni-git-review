{
  "name": "cogni-git-review",
  "version": "1.0.0",
  "private": true,
  "description": "CogniDAO's primary code management bot, built as a github app.",
  "author": "derekg1729",
  "license": "ISC",
  "homepage": "https://github.com//",
  "main": "index.js",
  "exports": {
    ".": "./index.js",
    "./github": "./github.js"
  },
  "keywords": [
    "probot",
    "github",
    "probot-app"
  ],
  "bin": {
    "cogni-e2e": "bin/e2e-runner.js"
  },
  "scripts": {
    "start": "probot run ./github.js",
    "test": "node --test",
    "e2e": "node -r dotenv/config bin/e2e-runner.js",
    "dev:capture": "tsx tools/dev/webhook-capture/capture-server.ts",
    "lint": "eslint . --ext .js,.yaml,.yml",
    "lint:fix": "eslint . --ext .js,.yaml,.yml --fix",
    "lint:workflows": "actionlint && actionlint cogni-rails-templates-v0.1/.github/workflows/*.yaml"
  },
  "dependencies": {
    "@langchain/langgraph": "^0.4.6",
    "@langchain/openai": "^0.6.9",
    "ajv": "^8.17.1",
    "fflate": "^0.8.2",
    "js-yaml": "^4.1.0",
    "langfuse-langchain": "^3.38.5",
    "micromatch": "^4.0.8",
    "pino": "^9.12.0",
    "pino-loki": "^2.6.0",
    "probot": "^13.0.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "dotenv": "^17.2.2",
    "eslint": "^9.33.0",
    "eslint-plugin-n": "^17.23.1",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-yml": "^1.18.0",
    "globals": "^16.3.0",
    "mkdirp": "^3.0.1",
    "nanoid": "^5.1.6",
    "nock": "^14.0.10",
    "smee-client": "^2.0.0",
    "tsx": "^4.20.6"
  },
  "engines": {
    "node": ">= 18"
  },
  "type": "module"
}
