{
  "description": "ESLint preset using SARIF output format (universal adapter approach)",
  "runner": "artifact.sarif",
  "with": {
    "artifact_name": "eslint.sarif",
    "artifact_glob": "**/*.sarif",
    "fail_on": { 
      "min_severity": "warning" 
    },
    "filters": { 
      "path_denylist": ["**/dist/**", "**/build/**", "**/node_modules/**"] 
    },
    "annotations": { 
      "per_finding_cap": 1000, 
      "truncate_long_messages": true 
    }
  },
  "workflow": {
    "description": "Use @microsoft/eslint-formatter-sarif to output SARIF format",
    "install_command": "npm install --save-dev @microsoft/eslint-formatter-sarif",
    "run_command": "npx eslint -f @microsoft/eslint-formatter-sarif -o eslint.sarif .",
    "upload_step": {
      "name": "Upload ESLint SARIF artifact",
      "uses": "actions/upload-artifact@v4",
      "with": {
        "name": "eslint.sarif",
        "path": "eslint.sarif",
        "retention-days": 7
      }
    }
  },
  "usage": {
    "gate_config": {
      "id": "eslint",
      "source": "external",
      "runner": "artifact.sarif",
      "with": {
        "artifact_name": "eslint.sarif",
        "fail_on": { "min_severity": "warning" }
      }
    }
  },
  "migration": {
    "breaking_change": "ESLint parser removed from artifact-json.js. Use SARIF output instead.",
    "from_json": "Replace 'parser: eslint_json' with 'runner: artifact.sarif' and update workflow to output SARIF.",
    "benefits": ["Standardized format", "Universal adapter", "No tool-specific code", "Future-proof"]
  }
}